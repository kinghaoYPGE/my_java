<configuration>

    　　　<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    　　　　　 <encoder>
    　　　　　　　　　<pattern>%-4relative [%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg %n</pattern>

    　　　　　 </encoder>
    　　　</appender>

    　　　<root level="INFO">
    　　　　　　<appender-ref ref="STDOUT" />
    　　　</root>
</configuration>